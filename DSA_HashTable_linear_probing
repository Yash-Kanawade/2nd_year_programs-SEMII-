def display(ht):
    print(ht)


def insert(ht,n):
    ele = int(input("Enter the element:"))
    loc = ele%n
    if(ht[loc] == -1):
        ht[loc] = ele
    else:
        count = 0
        while ht[loc] != -1:
            loc =(loc+1)%n
            count = count + 1
            if count == n:
                print("Hash table is full")
                display(ht)
                return;
        ht[loc] = ele
    display(ht)


def search(ht,n):
    ele = int(input("Enter the element you want to search"))
    loc = ele%n
    if(ht[loc] == ele):
        print("Element found at index:",loc)
        display(ht)
        return
    count = 0
    while(count != n):
        count = count + 1
        loc =(loc+1)%n
        if(ht[loc] == ele):
            print("Element found at index:",loc)
            display(ht)
            return
    print("Element not found")
    display(ht)

def main():
    n = int(input("Enter the size of Hashtable"))
    ht = []
    for i in range(n):
        ht.append(-1)
    while(1):
        print("1 : Insert")
        print("2 : Search")
        print("3 : Display")
        print("4 : Exit")
        ch = int(input("Enter your choice"))
        if ch == 1:
            insert(ht,n)
        elif ch == 2:
            search(ht,n)
        elif ch == 3:
            display(ht)
        else:
            break
main()
            
